<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.innovate.himnario.MisListasActivity"
    android:scrollbarAlwaysDrawVerticalTrack="true">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listasList" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/fab_bottom_margin"
        android:layout_marginEnd="@dimen/fab_right_margin"
        android:layout_marginRight="@dimen/fab_right_margin"
        android:clickable="true"
        android:onClick="onClick_Nueva_Lista"
        card_view:fabSize="normal"
        card_view:srcCompat="@drawable/ic_add_white_18dp" />

</RelativeLayout>